<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/operators"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_regular"
            android:padding="10dp"
            android:text="@string/operators"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:id="@+id/num_questions"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_regular"
            android:padding="10dp"
            android:text="@string/number_of_questions"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:id="@+id/num_lim"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_regular"
            android:padding="10dp"
            android:text="@string/number_limit"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:id="@+id/test_score"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_regular"
            android:padding="10dp"
            android:text="@string/test_score"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:id="@+id/test_date"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_regular"
            android:padding="10dp"
            android:text="@string/date"
            android:layout_gravity="end"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />

    </LinearLayout>

</androidx.cardview.widget.CardView>